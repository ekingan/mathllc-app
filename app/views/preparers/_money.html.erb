
<h5>Stats</h5>
<table>
	<thead>
		<tr>
			<th>Total Payments YTD</th>
			<th>Preparer Portion</th>
			<th>Wages YTD</th>
			<th>Balance</th>
		</tr>
	</thead>
	<tbody>
		<tr>
			<th><%= number_to_currency(@total_payments) %></th>
			<th><%= number_to_currency(@total_payments/2) %></th>
			<th><%= number_to_currency(@total_wages) %></th>
			<th><%= number_to_currency(@balance) %></th>
		</tr>

	</tbody>
</table>
<h5>Recent Payments</h5>
<table>
	<thead>
		<tr>
			<th>Client</th>
			<th>Job</th>
			<th>Amount</th>
			<th>Date</th>
		</tr>
	</thead>
	<tbody>
		<% @preparer.jobs.sort_by(&:updated_at).reverse.each do |job| %>
			<% if job.payments %>
		<tr>
			<th><%= job.client.last_name %></th>
			<th><%= job.id %></th>
        <% job.payments.each do |payment| %>
			<th><%= number_to_currency(payment.amount) %></th>
			<th><%= payment.created_at.strftime('%v') %></th>
        <% end %>
		</tr>
			<% end %>
		<% end %>
	</tbody>
</table>
